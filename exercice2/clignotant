LIST P=16F877A
#INCLUDE<P16F877A.INC>
BCF STATUS,RP1
BSF STATUS,RP0
MOVLW H'FF'
MOVWF TRISB
CLRF TRISC
BCF STATUS,RP0
BCF STATUS,RP1
L1
BTFSS PORTB,1
GOTO L2
BTFSS PORTB,0
GOTO L3
MOVLW H'80'
MOVWF PORTC
CALL TEMPO
CLRF PORTC 
CALL TEMPO
CALL TEMPO
CALL TEMPO
GOTO L1
L3
MOVLW H'80'
MOVWF PORTC
CALL TEMPO
CALL TEMPO
CLRF PORTC
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
GOTO L1
L2
BTFSS PORTB,0
GOTO L4
MOVLW H'80'
MOVWF PORTC
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CLRF PORTC
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
GOTO L1
L4
MOVLW H'80'
MOVWF PORTC
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO 
CALL TEMPO
CLRF PORTC
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
CALL TEMPO
GOTO L1
TEMPO
MOVLW H'01'
MOVWF T1CON
MOVLW H'00'
MOVLW TMR1H
MOVLW H'00'
MOVWF TMR1L
BCF PIR1,TMR1IF
L200
BTFSS PIR1,TMR1IF
GOTO L200
RETURN
END
